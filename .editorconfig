# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines trimming whitespace and a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches all js and html files with brace expansion notation
[*.{html, js, css}]
# Set default charset
charset = utf-8
# 2 space indentation
indent_style = space
indent_size = 2
